<%= form_for @post do |f| %>
  
   <div class="col-xs-12 col-md-1"></div> <!-- left side -->
    <div class="col-xs-12 col-md-10 post-title-field"> 
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: 'Insert awesome and interesting title here' %>
    </p>
    </div>
    <div class="col-xs-12 col-md-1"></div> <!-- right side -->

   <div class="col-xs-12 col-md-1"></div> <!-- left side -->
    <div class="col-xs-12 col-md-10 post-title-field"> 
    <p>
      <%= f.label :subtitle %><br>
      <%= f.text_field :subtitle, placeholder: 'Editorialized Subtitle goes here' %>
    </p>
      </div>
    <div class="col-xs-12 col-md-1"></div> <!-- right side -->
 
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :link %><br>
      <%= f.text_field :link %>
    </p>
 
    <p>
      <%= f.label :artist %><br>
      <%= f.text_field :artist %>
    </p>

   <p>
      <%= f.label :song %><br>
      <%= f.text_field :song %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  
<% end %>