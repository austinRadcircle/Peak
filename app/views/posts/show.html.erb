		<div class="col-xs-12 col-md-3 hidden-xs"></div> <!-- left side -->
			<div class="col-xs-12 col-md-6 post-body">
				<p><%= simple_format @post.body %></p>
			</div>
		<div class="col-xs-12 col-md-3 hidden-xs"></div> <!-- right side -->
	</div>



<div class="row comments">
	<div class="col-xs-12 col-md-6 col-md-offset-3">

<section class ="comments">
	<h2> <i class="fa fa-comments-o fa-2x"></i> Comments: <span class="comment-number"><%= @post.comments.size %></span></h2>
	<%if user_signed_in? %>
		<%= render 'comments/form'%>
	<%else %>
		<p class="sign-in-to-comment">You must <%= link_to 'login', new_user_session_path %> to post comments</p>
