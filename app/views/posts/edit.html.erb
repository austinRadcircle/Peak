<h1> Editing </h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
	<% if @post.errors.any? %>
		<div id = "error explanation">
			<h2> <%= pluralize(@post.errors.count, "error")%> prohibited Post from being saved </h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<il> <%= msg %> </il>
				<%end%>
			</ul>
		</div>
	<%end%>
	
	<p>
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %> <br>
		<%= f.text_area :body %>
	</p>
	<h1> HIT ENTER WHEN FINISHED WITH ALL EDITS </h1>
<%end%>
	
<%= link_to 'Back', post_path%>
<!-- Using PATCH HTTP to update a post, Following REST protocal -->