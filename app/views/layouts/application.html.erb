<!DOCTYPE html>
<html>
<head>
  <title>Peak</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="src/js/jquery.notebook.css">

  <%= csrf_meta_tags %>
</head>
<div class="row navigation-bar">
			<div class="col-xs-12 col-md-8 col-md-offset-2 navigation-bar">
				<h1> <%= link_to 'Home', posts_path %> </h1>
					<h2>About</h2>
					<h2>Team</h2>
					<h2>|</h2>
					<h2 class="login-nav-btn">Login</h2>
					<h2 class="signup-nav-btn">Sign Up</h2>
			</div>
	</div>

<body>
<section id = "main">
<% [:notice, :alert].each do |level| %>
	<% if flash[level] %>
		<div class = "flash <%= level%>"><%= flash[level] %> </div>
	<%end%>
<%end%>
<%= yield %>
<% if admin_signed_in? %>
	<%= admin_logged_in_msg %>
	<%else%>
	<%= user_logged_in_msg %>
<%end%>
</section>
</body>
</html>
